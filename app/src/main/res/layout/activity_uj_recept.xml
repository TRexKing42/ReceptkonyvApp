<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".UjReceptActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Új Recept"
            android:textAlignment="center"
            android:textSize="40dp"
            android:paddingBottom="30dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Étel neve"
            android:textSize="25dp"
            android:id="@+id/ujReceptNev"
            android:inputType="text"
            android:maxLength="50"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Étel rövid leírása"
            android:textSize="25dp"
            android:inputType="textMultiLine"
            android:id="@+id/ujReceptLeiras"
            android:maxLength="1024"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hozzávalók"
            android:textAlignment="center"
            android:textSize="25dp"
            android:paddingTop="30dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical"
            android:id="@+id/ingredientsListRv" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="1"
                android:paddingLeft="5dp"
                android:textSize="20dp"
                android:id="@+id/ujReceptIngAmountEt"
                android:inputType="number"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="szelet"
                android:paddingLeft="5dp"
                android:textSize="20dp"
                android:id="@+id/ujReceptIngUnitEt"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="friss kenyér"
                android:paddingLeft="5dp"
                android:textSize="20dp"
                android:id="@+id/ujReceptIngNameEt" />

            <Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hozzáadás"
                android:id="@+id/ujReceptIngButtonNew" />

        </LinearLayout>

        <com.skyhope.materialtagview.TagView
            android:id="@+id/tagView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tag_background_color="@color/colorPrimaryDark"
            app:tag_text_color="#fff"
            app:tag_limit="50"
            app:limit_error_text="Maximum 50 címkét lehet kiválasztani!"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Étel elkészítése"
            android:textSize="25dp"
            android:inputType="textMultiLine"
            android:id="@+id/ujReceptElkeszites" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Recept Mentése"
            android:id="@+id/ujReceptMentes" />
    </LinearLayout>
</ScrollView>