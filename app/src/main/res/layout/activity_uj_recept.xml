<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".UjReceptActivity"
    android:padding="5dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/newRecipe"
            android:textAlignment="center"
            android:textSize="40dp"
            android:paddingBottom="30dp"
            android:id="@+id/newRecipeText"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/NewRecipeFrame"
            android:layout_below="@id/newRecipeText"/>

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:lottie_fileName="loading1.json"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            android:id="@+id/ujReceptAnim"
            android:visibility="invisible"/>
</RelativeLayout>