<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReceptekFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/titleReceptek"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Receptek"
            android:textAlignment="center"
            android:textSize="50dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/titleReceptek"
            android:id="@+id/ujReceptButton"
            android:text="Ãšj recept"/>

        <ListView
            android:id="@+id/listReceptek"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ujReceptButton"
            android:divider="@color/colorRecipeDivider"
            android:dividerHeight="2dp"
            />

    </RelativeLayout>

</FrameLayout>